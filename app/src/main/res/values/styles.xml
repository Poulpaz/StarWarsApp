<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Chip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:color">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorAccent</item>
    </style>

    <style name="ChipTextStyle">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/subtitle</item>
    </style>

    <style name="Body">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/body</item>
    </style>

</resources>
